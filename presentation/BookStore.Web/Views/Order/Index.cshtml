@model OrderModel

@{ 
    ViewData["Title"] = "Cart";
}

<h1>Cart</h1>

<table class="table table-sm table-striped">
    <thead class="thead-dark">
        <tr>
            <th>№</th>
            <th>Title</th>
            <th>Author</th>
            <th>Price</th>
        </tr>
    </thead>
    <tbody>
        @for(int i =0; i < Model.Items.Count; i++)
         {
        <tr>
            <td>@(i+1)</td>
            <td>@Model.Items[i].Title</td>
            <td>@Model.Items[i].Author</td>
            <td>@Model.Items[i].Price $</td>
        </tr>
        }        
    </tbody>
    <tfoot>
        <tr>
            <td></td>
            <td></td>
            <td>Total amount - @Model.TotalCount</td>
            <td>Total price - @Model.TotalPrice $</td>
        </tr>
    </tfoot>    
</table>