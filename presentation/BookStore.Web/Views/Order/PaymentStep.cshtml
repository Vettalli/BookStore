@using BookStore.Web.Controllers;
@model Form

@{ 
    ViewData["Title"] = "Payment settings";
}

<h1>Payment settings</h1>

<form action="@Url.Action(nameof(OrderController.NextPayment))" method="post">
    <input type="hidden" name="id" value="@Model.OrderId"/>
    <input type="hidden"name="uniqueCode" value="@Model.UniqueCode"/>
    <input type="hidden" name="step" value="@Model.Step"/>
    
    @foreach (var field in Model.Fields)
     {
        if(field is HiddenField hiddenField)
        {
            <input type="hidden" name="values[@field.Title]" value="@field.Value"/>
        }
        else if(field is SelectionField selectionField)
        {
            <div class="form-group">
                <label for="values[@field.Title]">@field.Label</label>
                <select class="form-control" name="values[@field.Title]">
                    @foreach(var item in selectionField.Items)
                     {
                        <option value="@item.Key">@item.Value</option>
                     }
                </select>
            </div>
        }
     }
    <button type="submit" class="btn btn-success">Next</button>
</form>