@model List<Book>

@{
    ViewData["Title"] = "Search result";
 }

<h1>Search result</h1>

@if (Model.Count == 0)
{
    <p>Sorry, we didn't find book acoording to you query</p>  
}
else
{
    <ul>
        @foreach(var book in Model)
                {
                    <li><a href="@Url.Action("Index","Book", new { id = book.Id})">@book.Title</a></li>
                }
    </ul>
}