@model List<Book>

@{
    ViewData["Title"] = "Search result";
 }

<h1>Search result</h1>

@if (Model.Count == 0)
{
    <p>Sorry, there are no books according to your query</p>
}
else
{
    <ul>
        @foreach(var book in Model)
                {
                    <li>
                        <a href="@Url.Action("Index", "Book", new { id = book.Id})">@book.Title</a>
                    </li>
                }
    </ul>
}